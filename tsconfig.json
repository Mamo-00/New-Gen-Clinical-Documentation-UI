{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6"],
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/js",
    "composite": true
  },
  "include": ["src", "src/globals.d.ts"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
